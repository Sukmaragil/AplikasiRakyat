<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activity.LacakPermohonan"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>
    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            tools:context=".activity.InformasiPenghasilanTidakTetap"
            xmlns:tools="http://schemas.android.com/tools">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/noPelayanan"
                android:layout_gravity="top"
                android:nestedScrollingEnabled="false"
                android:numeric="integer"
                android:hint="Masukkan 10 digit nomor pelayanan"
                android:maxLength="10"/>

            <Button
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:text="LACAK PERMOHONAN"
                android:id="@+id/buttonLacak" />


            <TextView
                android:id="@+id/judulNIK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIK"
                android:textSize="@dimen/font_title"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nik"
                android:editable="false"
                android:enabled="true"
                android:layout_marginBottom="5dp"
                android:textColor="#000000"
                android:textSize="@dimen/font_isi"/>

            <TextView
                android:id="@+id/judulNamaLengkap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Lengkap"
                android:textSize="@dimen/font_title"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/namaLengkap"
                android:editable="false"
                android:enabled="true"
                android:layout_marginBottom="5dp"
                android:textColor="#000000"
                android:textSize="@dimen/font_isi"/>

            <TextView
                android:id="@+id/judulJenisPermohonan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Permohonan"
                android:textSize="@dimen/font_title"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/jenisPermohonan"
                android:editable="false"
                android:enabled="true"
                android:focusable="false"
                android:layout_marginBottom="5dp"
                android:textColor="#000000"
                android:textSize="@dimen/font_isi"/>

            <TextView
                android:id="@+id/judulTglPengajuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tgl Pengajuan"
                android:textSize="@dimen/font_title"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tglPengajuan"
                android:enabled="true"
                android:editable="false"
                android:layout_marginBottom="5dp"
                android:textColor="#000000"
                android:textSize="@dimen/font_isi"/>

            <TextView
                android:id="@+id/judulValidasiRT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Validasi RT"
                android:textSize="@dimen/font_title"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/validasiRT"
                android:editable="false"
                android:layout_marginBottom="5dp"
                android:textColor="#000000"
                android:textSize="@dimen/font_isi"/>



            <TextView
                android:id="@+id/judulTglRT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tgl Validasi RT"
                android:textSize="@dimen/font_title"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TglvalidasiRT"
                android:editable="false"
                android:layout_marginBottom="5dp"
                android:textColor="#000000"
                android:textSize="@dimen/font_isi"/>
            
            <TextView
                android:id="@+id/judulValidasiRW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Validasi RW"
                android:textSize="@dimen/font_title"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/validasiRW"
                android:editable="false"
                android:layout_marginBottom="5dp"
                android:textColor="#000000"
                android:textSize="@dimen/font_isi"/>

            <TextView
                android:id="@+id/judulTglRW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tgl Validasi RW"
                android:textSize="@dimen/font_title"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TglvalidasiRW"
                android:editable="false"
                android:layout_marginBottom="5dp"
                android:textColor="#000000"
                android:textSize="@dimen/font_isi"/>

            <TextView
                android:id="@+id/judulValidasiLurah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Validasi Kelurahan"
                android:textSize="@dimen/font_title"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/validasiKelurahan"
                android:editable="false"
                android:layout_marginBottom="5dp"
                android:textColor="#000000"
                android:textSize="@dimen/font_isi"/>

            <TextView
                android:id="@+id/judulTglLurah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tgl Validasi Lurah"
                android:textSize="@dimen/font_title"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TglvalidasiLurah"
                android:editable="false"
                android:layout_marginBottom="5dp"
                android:textColor="#000000"
                android:textSize="@dimen/font_isi"/>

        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>